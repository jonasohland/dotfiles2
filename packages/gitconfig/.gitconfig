[includeIf "gitdir:~/src/riedel/"]
    path = ~/src/riedel/.gitconfig
[includeIf "gitdir:~/src/private/"]
    path = ~/src/private/.gitconfig
[init]
	defaultBranchName = main
	defaultBranch = main
[difftool]
    prompt = false
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
